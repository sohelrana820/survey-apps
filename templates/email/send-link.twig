{% extends '/layouts/email.twig' %}

{% block content %}
    <p>
        <strong>Dear {{ data.user.first_name }} {{ data.user.last_name }},</strong>
    </p>
    <p>
        You request for a new download link of {{ data.product.name }}. Please review your download product.
    </p>

    <br/>
    <h2>Download Links</h2>
    <div class="download_links">
        {% for link in data.downloadLinks %}
            <p>
                Product Name: <strong class="product_name">{{ data.product.name }}</strong>
                <br/>
                Download Link: <a href="{{ link.link }}">{{ link.link }}</a>
                <br/>
                <span class="expire_notice">This link will be expire after 20 mins</span>
            </p>
        {% endfor %}
    </div>
    <br/>
    <p>You can send us e-mail at support@themevessel.com For Any Query or Support Related Issue</p>
{% endblock %}