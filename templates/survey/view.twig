{% extends 'layouts/default.twig' %}

{% block content %}
    {% for key, answer in answers %}
        <div class="panel panel-default">
        <div class="panel-heading"><strong>Question 1:</strong> {{ answer.question.question}} </div>
        <div class="panel-body">
            <div class="rating-raw">
                <div class="question-option">
                    <label class="control-label">Impact group size</label>
                </div>
                <div class="question-rating">
                    <input value="{{ answer.impact_group_size }}" class="star-rating rating-loading">
                </div>
            </div>

            <div class="rating-raw">
                <div class="question-option">
                    <label class="control-label">Occurrence frequency</label>
                </div>
                <div class="question-rating">
                    <input value="{{ answer.occurrence_frequency }}" class="star-rating rating-loading">
                </div>
            </div>

            <div class="rating-raw">
                <div class="question-option">
                    <label class="control-label">Experience impact</label>
                </div>
                <div class="question-rating">
                    <input value="{{ answer.experience_impact }}" class="star-rating rating-loading">
                </div>
            </div>

            <div class="rating-raw">
                <div class="question-option">
                    <label class="control-label">Business impact</label>
                </div>
                <div class="question-rating">
                    <input value="{{ answer.business_impact }}" class="star-rating rating-loading">
                </div>
            </div>

            <div class="rating-raw">
                <div class="question-option">
                    <label class="control-label">Financial feasibility</label>
                </div>
                <div class="question-rating">
                    <input value="{{ answer.financial_feasibility }}" class="star-rating rating-loading">
                </div>
            </div>

            <div class="rating-raw">
                <div class="question-option">
                    <label class="control-label">Technical feasibility</label>
                </div>
                <div class="question-rating">
                    <input value="{{ answer.technical_feasibility }}"  class="star-rating rating-loading">
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endblock %}


{% block jsBottom %}
<script>
    $(document).ready(function(){
        $('.star-rating').rating({
            size: 'sm',
            min: 0,
            max: 10,
            step: 1,
            stars: 10,
            showClear:false,
            disabled:true
        });
    });
</script>
{% endblock %}
