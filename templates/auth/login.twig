{% extends 'layouts/auth.twig' %}

{% block content %}
    <div class="signup-box well">
        <h2>Login</h2>
        <hr/>
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="email_address"></label>
                <input class="form-control" id="email_address" name="email" placeholder="Email address">
            </div>

            <div class="form-group">
                <label for="password"></label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            </div>
            <br/>
            <button type="submit" class="btn btn-success">Login</button>
            <span class="text-muted">Don't have account? </span><a href="/signup">Create Account</a>
        </form>
    </div>
{% endblock %}